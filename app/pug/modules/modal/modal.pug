#modal-register.modal.modal-register
  button.modal__close.modal-register_close Close
  h3.modal__title Регистрация профиля

  form(action="#").modal-register__form
    .form-row
      label.form-label Кто Вы:
      .form-group
        label.check
          input(type="radio", name="person", value="Фермер", checked).check__input
          span.check__box
          | Фермер
        label.check
          input(type="radio", name="person", value="Покупатель").check__input
          span.check__box
          | Покупатель
    .form-row
      label(for="company-name").form-label Название:
      input(type="text", name="company_name", id="company-name", placeholder="Введите название компании или ФИО", required)
    .form-row
      label(for="phone").form-label Телефон:
      input(type="tel", name="phone", id="phone", placeholder="Введите ваш телефон", required)
    .form-row
      label(for="email").form-label Mail:
      input(type="email", name="email", id="email", placeholder="Введите вашу почту", required)
    .form-row
      label(for="password").form-label Пароль:
      input(type="password", name="password", id="password", placeholder="Введите пароль", required)
    .modal__btns
      input(type="submit", value="Зарегистрироваться").btn

