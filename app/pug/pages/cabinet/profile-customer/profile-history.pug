section.profile
  .container
    .section-head
      h2.section-title История покупок
      .section-head__right
        .small-filters
          .small-filters__dates
            .small-filters__dates-head
              button(type="button").small-filters__btn.small-filters__btn-date
                +icon('calendar-2', 'small-filters__btn-icon')
                span.small-filters__date 
            .small-filters__dates-body
          .small-filters__search
            .small-filters__btn
              +icon('search', 'small-filters__btn-icon')
              input(type="text", name="search", placeholder="Поиск по содержанию")

    table.profile-history
      thead
        tr
          th Дата
          th Название
          th К-во
          th Стоимость
          th Поставщик
